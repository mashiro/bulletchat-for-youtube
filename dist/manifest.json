{
  "manifest_version": 3,
  "name": "Bulletchat for YouTube",
  "version": "2.0.0",
  "author": "mashiro",
  "action": {
    "default_popup": "index.html#options"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-script-loader.content.tsx.js.js"
      ],
      "matches": [
        "https://www.google.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "<all_urls>"
      ],
      "resources": [
        "**/*",
        "*"
      ],
      "use_dynamic_url": true
    }
  ],
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  }
}